<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_studio_sheet_form" model="ir.ui.view">
        <field name="name">studio.sheet.form</field>
        <field name="model">studio.sheet</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="ref" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>

                    <chatter/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_studio_sheet_tree" model="ir.ui.view">
        <field name="name">studio.sheet.tree</field>
        <field name="model">studio.sheet</field>
        <field name="arch" type="xml">
            <list>
                <field name="ref"/>
                <field name="name"/>
                <field name="description"/>
                <field name="create_uid" groups="studio.group_studio_admin" widget="many2one_avatar_user" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="view_studio_sheet_search" model="ir.ui.view">
        <field name="name">studio.sheet.search</field>
        <field name="model">studio.sheet</field>
        <field name="arch" type="xml">
            <search>
                <field name="ref"/>
                <field name="name"/>
                <field name="description"/>
            </search>
        </field>
    </record>

    <record id="action_studio_sheet" model="ir.actions.act_window">
        <field name="name">Sheet</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">studio.sheet</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_studio_sheet"
            name="Sheet" 
            parent="menu_studio_settings"
            action="action_studio_sheet"
            sequence="20"/>
</odoo>